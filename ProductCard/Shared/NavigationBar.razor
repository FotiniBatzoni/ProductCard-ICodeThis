

<div class="navbar navbar-light bg-light justify-content-between"
     style="background: linear-gradient(90deg, rgba(131,58,180,1) 0%, rgba(217,108,233,1) 100%, rgba(252,176,69,1) 100%); color:aliceblue;">
    <a class="navbar-brand" href="./productlist">
        <i class="fa-solid fa-chevron-left sm:text-left text-white m-5"></i>
    </a>
    <a class="navbar-brand text-white ">My Cart</a>
    @if (!string.IsNullOrEmpty(UserEmail))
    {
                        <li class="nav-item">
                            <span class="nav-link text-white">Welcome, @UserEmail</span>
                        </li>
    }
    <button class="navbar-toggler m-5" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="ml-auto">
        <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link text-black" href="./" Match="NavLinkMatch.All">
                        <span aria-hidden="true"></span> Home
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-black" href="register">
                        <span aria-hidden="true"></span> Register
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-black" href="login" Match="NavLinkMatch.All">
                        <span aria-hidden="true"></span> Login
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-black" href="logout" Match="NavLinkMatch.All">
                        <span aria-hidden="true"></span> Logout
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-black" href="productlist" Match="NavLinkMatch.All">
                        <span aria-hidden="true"></span> Products
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    [Parameter]
    public string UserEmail { get; set; }

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : "";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
